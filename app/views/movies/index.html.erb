<h1>Rotten Mangoes</h1>
<%= link_to "Submit a movie!", new_movie_path %><br />

<%= form_tag(movies_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Movies" %>
<%= submit_tag "Search" %>
<% end %>

<% if @movies.present? %>
  <% @movies.each do |movie| %>
    <h2><%= link_to movie.title, movie_path(movie) %> </h2>
  <% end %>
<% else %>
  <p>There are no posts containing the term(s) <%= params[:search] %>.</p>
<% end %>

<%= paginate @allmovies %>
<hr>
<% @allmovies.each do |movie| %>
  <%= link_to image_tag(movie.image_url(:thumb).to_s), movie_path(movie) %>
  <h2><%= link_to movie.title, movie_path(movie) %> </h2>
  <h3><%= movie.review_average || "0" %>/10</h3>
  <h3><%= formatted_date(movie.release_date) %></h3>
  <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
  <p><%= movie.description %> </p>
  <hr>

  
<% end %>


